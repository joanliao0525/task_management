<h1><%= @task.title %></h1>

<% if @task %>
<ul class="user-profile col-lg-6">
    <li>Description : </li>
      <p><%= @task.description %></p>
    <li>All day : </li>
      <p><%= @task.all_day %></p>
    <li>Start at : </li>
      <p><%= @task.start_at %></p>
    <li>End at : </li>
      <p><%= @task.end_at %></p>
    <li>Status : </li>
      <p><%= @task.status %></p>
    <li>Priority : </li>
      <p><%= @task.priority %></p>
    <li>Location : </li>
      <p><%= @task.position %></p>
    <li>URL : </li>
      <p><%= link_to @task.url, @task.url %></p>
</div>
<% else %>
  <h1>Task doesn't exist.</h1>
<% end %>
  <div class="container">
  <%= link_to 'Back', '/', class: 'btn btn-secondary' %>
  </div>
