  <h1>Task list <%= link_to "Create task", new_task_path, class: 'btn btn-success' %></h1>
  
  <table class="table">
    <thead>
      <th>Title</th>
      <th>Created at</th>
      <th>End at</th>
      <th>Status</th>
      <th>Locate</th>
      <th>priority</th>
      <th>URL</th>
      <th>Edit</th>
      <th>Delete</th>
    </thead>
    <tbody>
    <% @tasks.each do |task| %>
      <tr>
      <td>
        <%= link_to task.title, task_path(task) %>
      </td>
      <td><%= task.created_at %></td>
      <td><%= task.end_at %></td>
      <td><%= task.status %></td>
      <td><%= task.location %></td>
      <td><%= task.priority %></td>
      <td>
          <% if task.url? %>
            <%= link_to task.url, class: 'btn btn-info' do %>
            <i class="fas fa-link"></i>
            <% end %>
          <% else %>
            <button typw="button" class="btn btn-light" disabled><i class="fas fa-link"></i></button>
          <% end %>
      </td>
      <td><%= link_to edit_task_path(task), class: 'btn btn-warning' do %>
          <i class="fas fa-pencil-alt"></i>
          <% end %>
      </td>
      <td><%= link_to task_path(task), class: 'btn btn-danger', method: 'delete', data: { confirm: 'Are you sure to delete this task?'} do %>
      <i class="fas fa-trash-alt"></i>
      <% end %>
      </td>
      </tr>
    <% end %>
    </tbody>
  </table>
    